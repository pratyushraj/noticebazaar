# NoticeBazaar Environment Variables Template
# Copy this file to .env.local for local development
# For production, set these in your deployment platform (Vercel, Netlify, etc.)

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# API Configuration
# For production, set this to your API subdomain
VITE_API_BASE_URL=https://api.noticebazaar.com
# For local development, leave empty or set to http://localhost:3001

# CometChat (Optional - has fallback to Supabase)
VITE_COMETCHAT_APP_ID=your-cometchat-app-id
VITE_COMETCHAT_REGION=us

# Analytics (Optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_FACEBOOK_PIXEL_ID=your-pixel-id

# LLM Provider (Optional)
VITE_LLM_PROVIDER=groq
VITE_LLM_MODEL=llama-3.1-8b-instant

